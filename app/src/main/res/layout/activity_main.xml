<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background"
        tools:context=".main.MainActivity">

    <TextView
            android:textColor="@color/colorTextButton"
            android:text="Desenvolvido por Renato Sousa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvFooter"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent"/>

    <Button
            android:textSize="@dimen/text_button_font_size"
            android:text="Sair do Jogo"
            android:id="@+id/btExit"
            style="@style/custom_button"
            android:layout_marginBottom="64dp"
            app:layout_constraintBottom_toTopOf="@+id/tvFooter"
            android:layout_marginEnd="42dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="42dp"
            app:layout_constraintStart_toStartOf="parent"/>

    <Button
            android:text="ComeÃ§ar a Partida"
            style="@style/custom_button"
            android:id="@+id/btNewGame"
            app:layout_constraintStart_toStartOf="@+id/btExit"
            app:layout_constraintEnd_toEndOf="@+id/btExit"
            android:layout_marginBottom="42dp"
            app:layout_constraintBottom_toTopOf="@+id/btExit" android:layout_marginTop="43dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView2"/>
    <ImageView
            android:src="@drawable/home_img"
            android:layout_width="403dp"
            android:layout_height="360dp"
            android:id="@+id/imageView2"
            app:layout_constraintBottom_toTopOf="@+id/btNewGame"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>